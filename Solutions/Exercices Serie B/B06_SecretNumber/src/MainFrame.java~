    private void guessTextfieldActionPerformed(java.awt.event.ActionEvent evt)//GEN-FIRST:event_guessTextfieldActionPerformed
    {//GEN-HEADEREND:event_guessTextfieldActionPerformed
        // si le nombre n'a pas encore été deviné
        if (!messageLabel.getText().equals("Well done!"))
        {
            // lire le nombre de l'utilisateur
            int guess = Integer.valueOf(guessTextfield.getText());
            // jouer
            int returnCode = number.guessNumber(guess);
            // afficher un text en fonction du code de retour
            if (returnCode==0) messageLabel.setText("Well done!");
            else if (returnCode>0) messageLabel.setText("Number too big ...");
            else messageLabel.setText("Number too small ...");
            // afficher le nombre de tentatives
            nTriesLabel.setText("Number of tries: "+number.getCounter());
        }
    }//GEN-LAST:event_guessTextfieldActionPerformed

