public class MainFrame extends javax.swing.JFrame {

    Cistern cistern = null;

    public void updateView()
    {
       currentVolumeLabel.setText(cistern.getCurrentVolume()+" litres");
       fillRateLabel.setText( (int)(cistern.getCurrentRate()*100) / 100.0 + " %");
       //currentRateProgressBar : maximum=100 ; minimum=0
       currentRateProgressBar.setValue((int)(cistern.getCurrentRate()));
    }

    /** Creates new form Mainform */
    public MainFrame() {
        initComponents();
        // initialiser les dimensions.
        cistern = new Cistern(1,2);
        updateView();
    }

